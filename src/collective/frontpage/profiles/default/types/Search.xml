<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        name="Search"
        meta_type="Dexterity FTI"
        i18n:domain="collective.frontpage">

  <!-- Basic properties -->
  <property
      i18n:translate=""
      name="title">Search</property>

  <property
      i18n:translate=""
      name="description">A search section for a Frontpage.</property>

  <property name="allow_discussion">False</property>
  <property name="factory">Search</property>
  <property name="icon_expr"></property>
  <property name="link_target"></property>

  <!-- Hierarchy control -->
  <property name="global_allow">False</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types"></property>

  <!-- Schema, class and security -->
  <property name="add_permission">collective.frontpage.AddSection</property>
  <property name="klass">collective.frontpage.content.search.Search</property>
  <property name="model_file"></property>
  <property name="model_source"></property>
  <property name="schema">collective.frontpage.content.search.ISearch</property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="false">

    <element value="plone.app.content.interfaces.INameFromTitle"/>
    <element value="plone.app.dexterity.behaviors.metadata.IBasic"/>

    <element value="collective.frontpage.IColorFields"/>
    <element value="collective.frontpage.IImageFields"/>

  </property>

  <!-- View information -->
  <property name="add_view_expr">string:${folder_url}/++add++Search</property>
  <property name="default_view">search_default</property>
  <property name="default_view_fallback">False</property>
  <property name="immediate_view">search_default</property>
  <property name="view_methods">
    <element value="search_default"/>
    <element value="search_minimal"/>
  </property>

  <!-- Method aliases -->
  <alias
      from="(Default)"
      to="(dynamic view)"
  />
  <alias
      from="edit"
      to="@@edit"
  />
  <alias
      from="sharing"
      to="@@sharing"
  />
  <alias
      from="view"
      to="(selected layout)"
  />

  <!-- Actions -->
  <action
      action_id="view"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      title="View"
      url_expr="string:${object_url}"
      visible="True">
    <permission value="View"/>
  </action>

  <action
      action_id="edit"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      title="Edit"
      url_expr="string:${object_url}/edit"
      visible="True">
    <permission value="Modify portal content"/>
  </action>

</object>
