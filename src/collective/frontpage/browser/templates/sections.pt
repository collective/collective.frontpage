<html xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns="http://www.w3.org/1999/xhtml"
      i18n:domain="collective.frontpage"
      lang="en"
      tal:omit-tag="">

<head>
  <metal:block fill-slot="style_slot">
    <link rel="stylesheet" type="text/css" href="++resource++collective.frontpage/frontpage-compiled-2019-06-26.css">
  </metal:block>
</head>

<body>
  <metal:main fill-slot="main">
    <tal:define tal:define="section python:view.context">

      <tal:condition tal:condition="python:view.is_layout('teaser_default')">
        <div metal:use-macro="context/@@frontpage_macros/teaser_default" />
      </tal:condition>

      <tal:condition tal:condition="python:view.is_layout('static_default')">
        <div metal:use-macro="context/@@frontpage_macros/static_default" />
      </tal:condition>

      <tal:condition tal:condition="python:view.is_layout('tile_cards')">
        <div metal:use-macro="context/@@frontpage_macros/tile_cards" />
      </tal:condition>

      <tal:condition tal:condition="python:view.is_layout('tile_cascade')">
        <div metal:use-macro="context/@@frontpage_macros/tile_cascade" />
      </tal:condition>

      <tal:condition tal:condition="python:view.is_layout('search_bar')">
        <div metal:use-macro="context/@@frontpage_macros/search_bar" />
      </tal:condition>

    </tal:define>
  </metal:main>
</body>

</html>
