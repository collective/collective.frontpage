<html xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns="http://www.w3.org/1999/xhtml"
      i18n:domain="collective.frontpage"
      lang="en">

<head>
  <metal:block fill-slot="style_slot">
    <link rel="stylesheet" type="text/css"
          tal:define="navroot context/@@plone_portal_state/navigation_root_url"
          tal:attributes="href string:${navroot}/++resource++collective.frontpage/frontpage.css" />
  </metal:block>
</head>

<body>
  <metal:main fill-slot="main">
    <div tal:define="section python:view.context"
         metal:use-macro="context/@@frontpage_macros/frontpage_section_static" />
  </metal:main>
</body>

</html>
