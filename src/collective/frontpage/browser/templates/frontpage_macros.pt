<!-- Static Default -->
<div class="frontpage-section" metal:define-macro="static_default">
  <div class="section-content" tal:attributes="style view/get_style">
    <h2 class="section-title">${section/title}</h2>
    <p class="section-description" tal:condition="section/description">${section/description}</p>
    <a class="section-link" href="${section/link_url}"
       style="background-color: ${section/primary_color}; color: ${python: view.button_text_color(section)}"
       tal:condition="section/link_title">${section/link_title}</a>
  </div>
</div>

<!-- Teaser Default -->
<div class="frontpage-section full-height" metal:define-macro="teaser_default">
  <div class="section-content" tal:attributes="style view/get_style">
    <h2 class="section-title">${section/title}</h2>
    <p class="section-description" tal:condition="section/description">${section/description}</p>
    <a class="section-link" tal:condition="section/link_title"
       style="background-color: ${section/primary_color}; color: ${python: view.button_text_color(section)}"
       href="${section/link_url}">${section/link_title}</a>
  </div>
</div>

<!-- Search Bar -->
<div class="frontpage-section" metal:define-macro="search_bar">
  <div class="section-content" tal:attributes="style view/get_style">
    <form action="${view/get_portal_url}/@@search" enctype="multipart/form-data" method="POST">
      <input type="text" name="SearchableText" placeholder="Search something..." i18n:attributes="placeholder search_something">
    </form>
  </div>
</div>

<!-- Tile Cards -->
<div class="frontpage-section" metal:define-macro="tile_cards">
  <div class="section-content" tal:attributes="style view/get_style">

    <div class="tiles cards" tal:define="items view/contents" tal:condition="items">
      <tal:repeat tal:repeat="item items">
        <div class="card" style="background-color: ${section/primary_color}; color: ${python: view.button_text_color(section)}">
          <div class="card-title">${item/title|nothing}</div>
          <div class="card-description">${item/description|nothing}</div>
          <tal:condition tal:condition="item/link_url|nothing">
            <a href="${item/link_url}" title="${item/link_title}">Read more...</a>
          </tal:condition>
        </div>
      </tal:repeat>
    </div>

  </div>
</div>

<!-- Tile Cascaded -->
<div class="frontpage-section" metal:define-macro="tile_cascade">
  <div class="section-content" tal:attributes="style view/get_style">

    <div class="tiles cards cascade" tal:define="items view/contents" tal:condition="items">
      <tal:repeat tal:repeat="item items">
        <div class="card" style="background-color: ${section/primary_color}; color: ${python: view.button_text_color(section)}">
          <div class="card-title">${item/title|nothing}</div>
          <div class="card-description">${item/description|nothing}</div>
          <tal:condition tal:condition="item/link_url|nothing">
            <a href="${item/link_url}" title="${item/link_title}">Read more...</a>
          </tal:condition>
        </div>
      </tal:repeat>
    </div>

  </div>
</div>
